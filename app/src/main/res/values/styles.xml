<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/ColorPrimary</item>
    <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
    <item name="android:statusBarColor">@color/ColorPrimaryDark</item>
  </style>

  <style name="EpisodeList">
    <item name="android:divider">@color/primary_text_default_material_dark</item>
    <item name="android:dividerHeight">2dp</item>
  </style>

  <style name="EpisodeTitle">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="EpisodeDescription">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="EpisodeLength">
    <item name="android:gravity">center_vertical</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="EpisodePublishedDate">
    <item name="android:textSize">12sp</item>
  </style>
</resources>
